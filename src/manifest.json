{
  "manifest_version": 2,
  "name": "Auto Tab Mute",
  "description": "Automatically mutes background tabs",
  "version": "2.0",
  "icons": {
    "16": "assets/Logo-16x16.png",
    "48": "assets/Logo-48x48.png",
    "128": "assets/Logo-128x128.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "toggle_extension": {
      "description": "Toggle the extension on/off",
      "suggested_key": {
        "default": "Alt+Shift+U"
      }
    }
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}
