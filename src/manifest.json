{
  "manifest_version": 2,

  "name": "Auto Tab Mute",
  "description": "Automatically mutes background tabs",
  "version": "1.0",

  "background": {
	"persisten": false,
	"scripts": ["background.js"]
  },
  
  "browser_action": {  
  },
  
  "commands": {
	  "toggle_extension": {
		  "description": "Toggle the extension on/off",
		  "suggested_key": {
			  "default": "Alt+Shift+U"
		  }
	  }
  },
  
  "permissions": [
	"storage"
  ]
}
